<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/traveljournal"
        android:id="@+id/travelText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/planeLayout" />

    <RelativeLayout
        android:id="@+id/planeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/mouse"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/planeplaneplane" />


        <ImageView
            android:id="@+id/cat"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:src="@drawable/globe1" />

    </RelativeLayout>

    <com.beatem.tj.GraduallyTextView
        android:id="@+id/graduallyTextView"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="L O A D I N G ..."
        android:textColor="#000000"
        android:textSize="15sp" />


</RelativeLayout>

